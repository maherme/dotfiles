/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @bga;
    text-color:             @fg;
}

configuration {
    font:		    "JetBrainsMono Nerd Font 10";
    dpi:		    192;
}

window {
    width:      	    360px;
    padding:    	    25px;
    border:		    0px;
    border-radius:          0px;
    border-color:           @ac;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 		    true;
    text-color:		    @ac;
}
